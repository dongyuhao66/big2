.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.status {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  display: inline-block;
  margin-top: 10rpx;
}

.connected {
  background-color: #e8f5e9;
  color: #4caf50;
}

.disconnected {
  background-color: #ffebee;
  color: #f44336;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.btn {
  font-size: 28rpx;
  margin: 10rpx 0;
  padding: 0 20rpx;
  background-color: #1976d2;
  color: white;
  min-width: auto;
  flex: 1;
  margin: 0 5rpx;
}

.send-panel {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.message-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.send-btn {
  background-color: #4caf50;
  color: white;
  font-size: 28rpx;
}

.messages-container {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.message-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.messages {
  flex: 1;
  height: 600rpx;
}

.message-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.message-from {
  font-weight: bold;
  color: #1976d2;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.message-content {
  font-size: 28rpx;
  word-break: break-all;
  white-space: pre-wrap;
} 